<?xml version="1.0" encoding="utf-8" ?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
  <item android:state_pressed="true" >
    <shape>
      <solid
          android:color="#bd4647" />
      <stroke
          android:width="1dp"
          android:color="#E20015" />
      <corners
          android:radius="3dp" />
      <padding
          android:left="10dp"
          android:top="10dp"
          android:right="10dp"
          android:bottom="10dp" />
    </shape>
  </item>
  <item>
    <shape>
      <gradient
          android:startColor="#bd4647"
          android:endColor="#420000"
          android:angle="270" />
      <stroke
          android:width="1dp"
          android:color="#215F8B" />
      <corners
          android:radius="4dp" />
      <padding
          android:left="10dp"
          android:top="10dp"
          android:right="10dp"
          android:bottom="10dp" />
    </shape>
  </item>
</selector>
