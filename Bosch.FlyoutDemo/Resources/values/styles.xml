<?xml version="1.0" encoding="utf-8" ?>
<resources>

  <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
  <style name="BaseThemeLight" parent="@android:style/Theme.Light">
    <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->

  </style>

  <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
  <style name="BaseThemeLightDarkActionBar" parent="@android:style/Theme.Light">
    <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    <item name="drawer_icon">@drawable/ic_navigation_drawer_light</item>
    <item name="drawer_shadow">@drawable/drawer_shadow_light</item>

  </style>

  <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
  <style name="BaseTheme" parent="@android:style/Theme">
    <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->

  </style>

  <!-- Application theme. -->
  <style name="Theme" parent="BaseTheme">
    <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    <item name="drawer_icon">@drawable/ic_navigation_drawer_dark</item>
    <item name="drawer_shadow">@drawable/drawer_shadow_dark</item>
    <item name="background_color">@android:color/transparent</item>
  </style>

  <style name="ThemeLight" parent="BaseThemeLight">
    <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    <item name="drawer_icon">@drawable/ic_navigation_drawer_light</item>
    <item name="drawer_shadow">@drawable/drawer_shadow_light</item>
    <item name="background_color">@color/light_background</item>
  </style>

  <style name="ThemeLightDarkActionBar" parent="BaseThemeLightDarkActionBar">
    <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    
    <item name="background_color">@color/light_background</item>
  </style>

  <style name="ButtonText">
    <item name="android:layout_width">fill_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:textColor">#ffffff</item>
    <item name="android:gravity">center</item>
    <item name="android:layout_margin">3dp</item>
    <item name="android:textSize">25dp</item>
    <!--<item name="android:textStyle">bold</item> -->
    <item name="android:shadowColor">#000000</item>
    <item name="android:shadowDx">1</item>
    <item name="android:shadowDy">1</item>
    <item name="android:shadowRadius">2</item>
  </style>

  <style name="EntityNumber">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:textColor">#FF000000</item>
    <item name="android:textSize">8dip</item>
    <item name="android:textStyle">italic</item>
  </style>

  <style name="EntityName">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:padding">10dp</item>
    <item name="android:textColor">#FF000000</item>
    <item name="android:textSize">18dip</item>
  </style>

</resources>
